---
layout: null
---
[
  {% for post in site.posts %}

  {% comment %} <!-- Not sure why, but search defaults to nm-results --> {% endcomment %}
      {
        "title"    : "{{ post.title | escape }}",
        "desc"     : "{{ post.title | escape }}",
        "category" : "{{ post.category }}",
        "tags"     : "{{ post.tags | join: ', ' }}",
        "url"      : "/{{ post.permalink }}",
        "date"     : "{{ post.date }}"
      } {% unless forloop.last %},{% endunless %}
  {% endfor %}
]
